{
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "airbnb-typescript",
      "plugin:react/recommended",
      "plugin:compat/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "tsconfig.json"
      ],
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "react-hooks",
      "jsx-a11y",
      "import",
      "react"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off"
    }
  }